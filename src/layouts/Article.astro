---
import BaseLayout from './Base.astro';
import TagList from '../components/TagList.astro';

const {content} = Astro.props;
const { title, description, date, tags } = content;
---

<BaseLayout title={title} description={description} date={date}>
  <style global>
  .markdown-body ul {
    @apply list-disc list-inside pl-4 mb-4
  }
  .markdown-body h1, h2, h3 {
    @apply font-bold mb-4
  }
  .markdown-body h1, h2 {
    @apply border-b-2 border-solid border-gray-200 
  }
  .markdown-body h1 {
    @apply text-3xl pb-2
  }
  .markdown-body h2 {
    @apply text-2xl
  }
  .markdown-body h3 {
    @apply text-lg
  }
  .markdown-body p {
    @apply mb-4
  }
  .markdown-body a {
    @apply text-blue-500
  }
  .markdown-body :not(pre) > code {
    @apply bg-gray-200 p-1
  }
  </style>
  <div class="markdown-body shadow-md p-8">
    <h1>{title}</h1>
    <TagList tags={tags} />
    <div class="mb-4" />
    <slot />
  </div>
</BaseLayout>
