---
import { joinSiteAndPath } from '../util.js';

export interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div>
  {
    tags.map((tag) => (
      <a
        href={joinSiteAndPath(Astro.site, `/tags/${tag}`)}
        class="text-blue-500 pr-1">
        #{tag}
      </a>
    ))
  }
</div>
